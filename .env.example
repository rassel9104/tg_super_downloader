# Telegram Bot + Telethon
BOT_TOKEN="123456:ABC"
API_ID=123456
API_HASH="your_api_hash"
TELETHON_STRING="paste_here"   # Generado con session_setup.py (tu archivo actual)  # :contentReference[oaicite:7]{index=7}

# Rutas
DOWNLOAD_DIR="./downloads"
DB_PATH="./data/queue.db"
TIMEZONE="America/New_York"

# Scheduler
SCHEDULE_HOUR=2
# Si quieres 24/7, /schedule → 24/7 (internamente SCHED_ENABLED=0). En ventana, no auto-inicia al encolar.

# --- Ritmo de notificaciones aria2 (anti-spam) ---
# Cada cuántos segundos sondear aria2 (mín. 5). Ej: 20
A2_PROGRESS_EVERY=20
# Paso mínimo de % para editar el mensaje. Ej: 15 (recomendado 10–25)
A2_PROGRESS_STEP=15
# Keepalive si no hubo salto de % en N segundos. Ej: 120
A2_PROGRESS_KEEPALIVE=120

# --- yt-dlp: subtítulos y metadata ---
# Habilitar escritura de subtítulos (manuales y automáticos)
YTDLP_WRITE_SUBS=true
# Lenguas de subtítulos (coma-separado, admite comodines):
# español internacional y variantes + fallback "*"
YTDLP_SUB_LANGS="es,es-419,es-ES"
# Convertir subtítulos a SRT (vacío para desactivar)
YTDLP_CONVERT_SUBS=srt
# Escribir metadata .info.json y generar .nfo (Emby/Jellyfin)
YTDLP_METADATA_NFO=true
# Escribir thumbnail y convertir a .jpg
YTDLP_WRITE_THUMB=true

# --- yt-dlp: cookies / autenticación (YouTube) ---
# Modo: browser|file|off|auto
YTDLP_COOKIES_MODE=browser
# Navegador y perfil (ajusta si usas otro)
YTDLP_BROWSER=chrome
YTDLP_BROWSER_PROFILE=Default
# Si usas modo file:
YTDLP_COOKIES_FILE=data\cookies\youtube.txt

# aria2 JSON-RPC
ARIA2_ENDPOINT="http://127.0.0.1:6800/jsonrpc"
ARIA2_SECRET=""  # opcional

# Panel/API
PANEL_HOST="127.0.0.1"
PANEL_PORT=8080
PANEL_TOKEN="change-me"  # simple token header para proteger el panel

# Misc
LOG_LEVEL="INFO"
